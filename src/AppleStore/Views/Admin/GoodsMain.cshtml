@model Decimal
@{ 
    Layout = "_AdminLayout";
}
<style>
    .buttons-div{
        margin-bottom: 50px;
        margin-top: 50px;
    }
    .goods-list{
        margin-bottom: 50px;
        
    }
    .drpdwn{
        height: 30px;
    }
    .dropdown-toggle{
        width: 150px;
    }
</style>
<div class="col-xs-12 goods-main text-center">
    <div class="container admin-top-links">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 button-column">
                <a href="/Admin/Main" class="btn btn-block btn-primary btn-lg">СПИСОК ЗАКАЗОВ</a>
            </div><!--end div ordering-list-button-column-->

            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 button-column">
                <a href="#" class="btn btn-block btn-default  btn-lg active">КАТАЛОГ ТОВАРОВ</a>
            </div><!--end div ordering-list-button-column-->

            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 button-column">
                <a href="/Admin/UsersMain" class="btn btn-block btn-primary  btn-lg">СПИСОК ПОЛЬЗОВАТЕЛЕЙ</a>
            </div><!--end div ordering-list-button-column-->

        </div><!--end div row-->
    </div><!--end div admin-top-links-->
    <div class="col-xs-12 buttons-div">
        <div class="col-xs-3">
            <span>Выбрать категорию &nbsp;&nbsp;</span>
            <div class="btn-group drpdwn">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" 
                        aria-expanded="false" ><span id="drpdwn-text">Watch</span>&nbsp;&nbsp;
                   <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li ng-repeat="category in categories"><a href="#" ng-click="selectcategory(category.CategoriesID)">{{category.CategoryName}}</a></li>
                </ul>
            </div>
            </div>
        <div class="col-xs-offset-5 col-xs-3">
            <button class="btn btn-success" ng-click="addelement()">
                Добавить Товар&nbsp;&nbsp;<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
        </div>
    </div>
    <div class="goods-list">
        <table class="table table-hover">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Модель</td>
                    <td>Тип</td>
                    <td>Цена</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in elements">
                    <td>{{item.AppleID}}</td>
                    <td>{{item.Model}}</td>
                    <td>{{item.Type}}</td>
                    <td>{{item.Price | number:2}}</td>
                    <td>
                        <button class="btn btn-primary" ng-click="changeelement(item.AppleID)">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </button>&nbsp;&nbsp;
                        <button class="btn btn-danger" ng-click="removeelement(item.AppleID)">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>&nbsp;&nbsp;
                        
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-xs-12 ordering-paging text-center">
        <ul class="pagination">
            <li><a href="#" class="previous-pages" ng-click="pageclick(1)">&laquo;</a></li>
            <li ng-repeat="page in paging" class="pages-li">
                <a href="#" id="page{{page}}" ng-click="pageclick(page)">{{page}}</a>
            </li>
            <li><a href="#" class="next-pages" ng-click="pageclick(totalPages)">&raquo;</a></li>
        </ul>
    </div>
</div>



@section Scripts{
    <script type="text/javascript" asp-src-include="~/js/Admin/Goods/appGoodsMain/*.js"></script>
}