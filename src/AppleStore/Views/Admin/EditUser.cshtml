@model ApplicationUser
@{ 
    Layout = "_AdminLayout";
    var url = ViewData["Returnurl"];
    ViewData["Title"] = "Изменение данных пользователя";
}
<div class="container admin-top-links">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 button-column">
            <a href="/Admin/Main" class="btn btn-block btn-primary btn-lg">СПИСОК ЗАКАЗОВ</a>
        </div><!--end div ordering-list-button-column-->

        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 button-column">
            <a href="/Admin/GoodsMain" class="btn btn-block btn-primary  btn-lg">КАТАЛОГ ТОВАРОВ</a>
        </div><!--end div ordering-list-button-column-->

        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 button-column">
            <a href="/Admin/UsersMain" class="btn btn-block btn-primary  btn-lg">СПИСОК ПОЛЬЗОВАТЕЛЕЙ</a>
        </div><!--end div ordering-list-button-column-->

    </div><!--end div row-->
</div><!--end div admin-top-links-->

<div class="text-center" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="col-xs-offset-1 col-xs-10">
        <form asp-action="changeuserdata" role="form" method="post" class="edit-user-form">
            <div class="form-group">
                <label asp-for="@Model.UserName"></label>
                <input type="text" placeholder="Имя пользователя" name="UserName"
                       asp-for="@Model.UserName" class="form-control"/><br />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input type="text" placeholder="Email" name="Email"
                       asp-for="@Model.Email" class="form-control"/><br />
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber"></label>
                <input type="text" placeholder="Phone number" name="PhoneNumber"
                       asp-for="@Model.PhoneNumber" class="form-control"/><br />
            </div>
            <div class="form-group">
                <label asp-for="@Model.City"></label>
                <input type="text" placeholder="City" name="City"
                       asp-for="@Model.City" class="form-control"/><br />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address"></label>
                <input type="text" placeholder="Address" name="Address"
                       asp-for="@Model.Address" class="form-control"/><br />
            </div><br />
                <input type="hidden" name="Id" asp-for="@Model.Id" /><br />
                <input type="hidden" name="ReturnUrl" value="@url"/>
                <button type="submit" class="btn btn-warning change-user-button">Изменить Пользователя</button>
    </form><br />
    </div>

</div>
@section Scripts{
    <script type="text/javascript" asp-src-include="~/js/Admin/appEditUser/*.js"></script>
}

