<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" asp-href-include="~/css/frameworks/*.css" />
    <link rel="stylesheet" asp-href-include="~/css/Admin/*.css" />
    @RenderSection("Styles",required: false)
</head>
<body ng-app="Admin" ng-controller="AdminCtrl">
    <div class="pre-loader" ng-if="loader == false">
        <div class="round">
        </div><!--end div round-->
    </div><!--end div pre-loader-->
    <div class="body">
        <div class="head">
            <div class="col-xs-1 logo-img-div">
                <a href="/Home/Index">
                    <img src="~/images/HomeLayout/logo.png" id="logo_img" />
                </a>
            </div><!--end div logo-img-div-->

            <div class="col-xs-offset-5 col-xs-6 col-sm-offset-5 col-sm-6 col-md-offset-6 col-md-5 col-lg-offset-7 col-lg-4">
                <div class="col-xs-8">Ваш статус &nbsp;&nbsp; @ViewData["Role"]</div>
                <div class="col-xs-4">
                    <a href="/Auth/LogOutAdmin" id="logout">Выйти</a>
                </div>
            </div><!--end div head user info-->
            
        </div><!--end div head-->
        @RenderBody()
    </div><!--end div body-->
</body>
</html>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script asp-src-include="~/js/frameworks/*.js" asp-src-exclude="~/js/frameworks/jquery.js" type="text/javascript"></script>
@RenderSection("Scripts", required: false)