@{
    Layout = "_HomeLayout";
}
@section Styles{
<link asp-href-include="~/css/Home/*.css" asp-append-version="true" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.min.css">
}
<!--class="carousel-main"-->
<div ng-controller="CarouselCtrl" >
    <div id="myCarousel" class="carousel slide" data-interval="6500" data-ride="carousel">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active carousel-dot"></li>
            <li data-target="#myCarousel" data-slide-to="1" class="carousel-dot"></li>
            <li data-target="#myCarousel" data-slide-to="2" class="carousel-dot"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner">
            <div class="active item carousel-fade">
                <a ng-href="{{data[0].href}}">
                    <img ng-src="{{data[0].src}}" />
                </a>
                <div class="carousel-caption">
                    <h3>{{data[0].text}}</h3>
                </div>
            </div>
            <div class="item carousel-fade">
                <a ng-href="{{data[1].href}}">
                    <img ng-src="{{data[1].src}}" />
                    <div class="carousel-caption">
                        <h3>{{data[1].text}}</h3>
                    </div>
                    </a>
            </div>
            <div class="item carousel-fade">
                <a ng-href="{{data[2].href}}">
                    <img ng-src="{{data[2].src}}" />
                    <div class="carousel-caption">
                        <h3>{{data[2].text}}</h3>
                    </div>
                </a>
            </div>
        </div>
        <!-- Carousel nav -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div><!--end div ng-controller-->

